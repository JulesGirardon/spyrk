#!/usr/bin/env bash
set -euo pipefail
source "$(dirname "$0")/common"

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

check_uv
check_venv
make_lock

if ! command -v uv run pytest &> /dev/null; then
    echo -e "${RED}❌ Pytest is not installed in the virtual environment.${NC}" >&2
    exit 1
fi

echo -e "${CYAN}========================================${NC}"
echo -e "${CYAN}   Running tests with coverage (HTML)   ${NC}"
echo -e "${CYAN}========================================${NC}"
if ! uv run pytest --cov=src --cov-report=term-missing --cov-report=html; then
    echo -e "${RED}❌ Pytest tests or coverage failed.${NC}" >&2
    exit 1
fi

echo
echo -e "${GREEN}✅ Pytest and coverage (HTML) completed successfully.${NC}"